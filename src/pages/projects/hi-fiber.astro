---
import { getEntry } from "astro:content";
import ProjectHero from "../../components/ProjectHero.astro";
import ProjectLayout from "../../layouts/ProjectLayout.astro";
import ColsLeft from "../../components/rows/ColsLeft.astro";
import CustomImage from "../../components/CustomImage.astro";
import Flex from "../../components/rows/Flex.astro";
import ColsRight from "../../components/rows/ColsRight.astro";

const project = await getEntry("projects", "hi-fiber");
---

<ProjectLayout>
    <ProjectHero
        title={project.data.title}
        subtitle={project.data.subtitle}
        category={project.data.category}
        cover={project.data.cover}
    />

    <ColsLeft>
        <CustomImage
            slot="col2"
            src="/assets/projects/hi-fiber/hi-fiber-croc-top.jpg"
            alt="Hi-Fiber with pliers from top"
            width={1920}
            height={1200}
        />

        <Flex slot="col2">
            <CustomImage
                src="/assets/projects/hi-fiber/hi-fiber-croc-front.jpg"
                alt="Hi-Fiber with pliers from front"
                width={1920}
                height={1200}
            />

            <CustomImage
                src="/assets/projects/hi-fiber/hi-fiber-falling-multiple.jpg"
                alt="Multiple Hi-Fiber falling"
                width={1920}
                height={1200}
            />
        </Flex>
    </ColsLeft>

    <ColsRight>
        <CustomImage
            slot="col1"
            src="/assets/projects/hi-fiber/hi-fiber-product-line.jpg"
            alt="Hi-Fiber product line"
            width={1920}
            height={1200}
        />

        <CustomImage
            slot="col1"
            src="/assets/projects/hi-fiber/hi-fiber-jello.jpg"
            alt="Hi-Fiber product line"
            width={1920}
            height={1200}
        />
    </ColsRight>
</ProjectLayout>
