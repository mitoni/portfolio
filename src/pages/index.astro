---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import Projects from "../components/Projects.astro";
import CenteredText from "../components/rows/CenteredText.astro";
import Highlight from "../components/text/Highlight.astro";
---

<MainLayout>
    <Hero slot="hero" id="hello" />

    <CenteredText>
        I am an enthusiastic <Highlight>Technology Product Leader</Highlight>
         who has spent the last decade turning diverse ideas into successful
        products in fast-paced enviroments. I coordinated every aspect of the
        process from brainstorming to R&D and GTM strategies, ensuring fruitful
        collaboration among cross-functional engineering, design, marketing, and
        sales teams.
    </CenteredText>

    <Projects id="projects" />
</MainLayout>
