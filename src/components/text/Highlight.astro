---
const { class: cls, ...props } = Astro.props;
---

<style>
    .highlight {
        display: inline;

        font-family: var(--fontSerif);
        font-weight: var(--fontWeightLg);
        font-size: 1.15em;
    }
</style>

<span class:list={["highlight", cls]} , {...props}>
    <span style={{ fontSize: "50%" }}>&nbsp;</span>
    <slot />
    <span style={{ fontSize: "50%" }}>&nbsp;</span>
</span>
