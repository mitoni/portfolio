---
interface Props {
    title?: string;
}

import Row from "../rows/Row.astro";
import SectionTitle from "../text/SectionTitle.astro";

const { title } = Astro.props;
---

<style>
    .cols-left {
        padding-left: var(--spacingMd);
        padding-right: var(--spacingMd);
    }

    .col1 {
        grid-column: 1 / 4;
    }

    .col2 {
        grid-column: 5 / -1;
    }

    .cols-left-stick {
        top: var(--sizeNavbarY);
        position: sticky;
    }

    .cols-left-title {
        grid-column: 4 / 5;

        transform: translateX(10%);
    }

    @media only screen and (max-width: 600px) {
        .cols-left {
            padding-top: var(--spacingMd);
            padding-bottom: var(--spacingMd);
        }

        .col1 {
            position: sticky;
            grid-column: 1 / -1;
        }

        .col2 {
            grid-column: 1 / -1;
        }

        .cols-left-title {
            grid-column: 1 / -1;
            transform: none;

            padding-left: var(--spacingMd);
            padding-right: var(--spacingMd);
        }
    }
</style>

<Row>
    {
        title ? (
            <SectionTitle class="cols-left-title">{title}</SectionTitle>
        ) : null
    }

    <section class="cols-left col1">
        <div class="cols-left-stick">
            <slot name="col1" />
        </div>
    </section>

    <section class="cols-left col2">
        <slot name="col2" />
    </section>
</Row>
