---
import Row from "./Row.astro";

const { class: cls, pre: Pre, ...props } = Astro.props;
---

<style>
    .centered {
        display: flex;

        flex-direction: row;
        justify-content: center;
        align-items: center;

        text-align: center;

        gap: var(--spacingLg);
    }

    .centered-container {
        grid-column: 3 / 7;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    @media only screen and (max-width: 600px) {
        .centered {
            grid-column: 1 / -1;

            text-align: left;
        }
    }
</style>

<Row>
    <section class="centered-container">
        <slot name="pre" />
        <section class:list={["centered", cls]} {...props}>
            <slot />
        </section>
    </section>
</Row>
