---
import "../style/fontFace.css";
import Balls from "../components/Balls.svelte";
---

<style>
    .section {
        width: 100%;
        height: 100vh;

        display: grid;
        grid-template-rows: repeat(3, minmax(0, 1fr));
        grid-template-columns: repeat(8, minmax(0, 1fr));
    }

    .container {
        grid-column: 3 / -1;
        grid-row: 2 / 3;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;

        font-weight: 150;
        font-size: clamp(1em, -0.875rem + 8.75vw, 1.75rem);
    }

    .light {
        opacity: 0.15;
    }

    .serif {
        font-family: var(--fontSerif);
        font-weight: 500;
    }

    .line {
        transform-origin: bottom center;
        animation: move-up 0.5s cubic-bezier(0.39, 0.575, 0.565, 1) both;
    }

    @media only screen and (max-width: 600px) {
        .container {
            grid-column: 1 / -1;
        }
    }

    @keyframes move-up {
        0% {
            opacity: 0;
            transform: translateY(25%);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<section class="section">
    <Balls client:only />

    <div class="container">
        <div class="line" style={{ animationDelay: 0.4 }}>
            <span class="light">I'm</span><span style={{ paddingLeft: "36px" }}
                >michele tonizzo</span
            >
        </div>

        <div style="height: 1em;"></div>

        <div class="line" style={{ animationDelay: 0.5 }}>
            <span class="light" style={{ paddingLeft: "29px" }}>a</span><span
                style={{ paddingLeft: "25px" }}
                >devoted <span class="serif">maker</span></span
            >
        </div>

        <div class="line" style={{ animationDelay: 0.6 }}>
            &<span class="light" style={{ paddingLeft: "10px" }}>an</span><span
                style={{ paddingLeft: "10px" }}
                >enthusiastic <span class="serif">tech leader</span></span
            >
        </div>
    </div>
</section>
