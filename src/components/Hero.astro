---
import Sprites from "../components/Sprites.svelte";
import Row from "./rows/Row.astro";
---

<style>
    .hero-row {
        width: 100%;
        height: 100vh;

        grid-template-rows: repeat(3, minmax(0, 1fr));
    }

    .hero-container {
        grid-column: 3 / -1;
        grid-row: 3 / 4;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;

        font-size: clamp(1em, -0.875rem + 8.75vw, var(--fontSizeLg));
        font-weight: var(--fontWeightSm);
    }

    .light {
        opacity: var(--opacityLight);
    }

    .serif {
        font-family: var(--fontSerif);
        font-weight: var(--fontWeightLg);
        font-size: 1.15em;
    }

    .line {
        transform-origin: bottom center;
        animation: move-up 1s cubic-bezier(0.39, 0.575, 0.565, 1) both;
    }

    @keyframes move-up {
        0% {
            opacity: 0;
            transform: translateY(25%);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media only screen and (max-width: 600px) {
        .hero-container {
            grid-column: 1 / -1;
        }
    }
</style>

<Row class="hero-row">
    <Sprites client:only />

    <div class="hero-container">
        <div class="line" style={{ animationDelay: "0.4s" }}>
            <span class="light">I'm</span><span style={{ paddingLeft: "36px" }}
                >michele tonizzo</span
            >
        </div>

        <div style="height: 1em;"></div>

        <div class="line" style={{ animationDelay: "0.6s" }}>
            <span class="light" style={{ paddingLeft: "29px" }}>a</span><span
                style={{ paddingLeft: "25px" }}
                >devoted <span class="serif">maker</span></span
            >
        </div>

        <div class="line" style={{ animationDelay: "0.8s" }}>
            &<span class="light" style={{ paddingLeft: "10px" }}>an</span><span
                style={{ paddingLeft: "10px" }}
                >enthusiastic <span class="serif">tech leader</span></span
            >
        </div>
    </div>
</Row>
